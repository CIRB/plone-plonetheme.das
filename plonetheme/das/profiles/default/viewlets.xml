<?xml version="1.0"?>
<object>
  <order manager="plone.portalheader" skinname="Das Theme" based-on="Sunburst Theme">	 
    
    <viewlet name="das.logo" insert-before="plone.global_sections" />
    <viewlet name="das.language_bar" insert-after="das.logo" /> 
    <viewlet name="das.searchbox" insert-after="das.language_bar" />
    <viewlet name="das.documentactions" insert-before="das.searchbox" />
    <viewlet name="plone.global_sections" />
    <viewlet name="das.quicklinks" insert-after="plone.global_sections" /> 
    <viewlet name="das.breadcrumb" insert-after="das.quicklinks" /> 
  </order>

  <order manager="plone.portalfooter" skiname="Das Theme" based-on="Sunburst Theme">
    <viewlet name="das.footer" />
    <viewlet name="plone.personal_bar" />
  </order>

<!-- hidden viewlets -->
 
  <hidden manager="plone.portalheader" skinname="Das Theme" based-on="Sunburst Theme">
    <viewlet name="plone.personal_bar" />
    <viewlet name="plone.logo" /> 
    <viewlet name="plone.app.i18n.locales.languageselector" />
    <viewlet name="plone.searchbox"  />
    <viewlet name="plone.site_actions" />
    <viewlet name="plone.path_bar"/>
  </hidden>

  <!--<hidden manager="plone.belowcontenttitle" skinname="Das Theme" based-on="Sunburst Theme">
     <viewlet name="plone.belowcontenttitle.documentbyline" />
  </hidden>-->

  <hidden manager="plone.belowcontentbody" skinname="Das Theme" based-on="Sunburst Theme">
     <viewlet name="plone.abovecontenttitle.documentactions" />
  </hidden>

  <hidden manager="plone.portalfooter" skinname="Das Theme" based-on="Sunburst Theme">
    <viewlet name="plone.footer" />
    <viewlet name="plone.colophon" />
    <viewlet name="plone.site_actions" />
  </hidden>
  
</object>
